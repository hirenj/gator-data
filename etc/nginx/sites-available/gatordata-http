## Access over HTTP (but not HTTPS)
server {
  listen        80;
  listen        [::]:80 default ipv6only=on;
  access_log    /var/log/nginx/access.log;
  #server_name  *gator.glycocode.com;
  location / {
    root        /var/gatordata/www;
    index       index.html;
    error_page  404 = @backend;
  }
  location ~ ^/doi/.*[^/]$ {
    valid_referers *;
    if ($invalid_referer) {
      rewrite  ^(.*)$ $1/ break;
    }
  }
  include     /var/gatordata/etc/nginx/redirects

  location @backend {
    proxy_pass          http://127.0.0.1:3000;
    proxy_set_header    X-Client-IP  $remote_addr;
  }
}
